{
  "name": "la-vague",
  "version": "1.1.0",
  "description": "LA VAGUE Streetwear - Premium E-commerce Platform",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev:server": "nodemon server.js",
    "dev:client": "vite",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build": "vite build",
    "build:analyze": "vite build --mode analyze",
    "preview": "vite preview",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "prepare": "node scripts/setup-husky.js"
  },
  "dependencies": {
    "@sentry/node": "^7.100.0",
    "@sentry/profiling-node": "^7.100.0",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.4.3",
    "cloudinary": "^2.0.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.9",
    "paystack-api": "^2.0.6",
    "pg": "^8.11.3",
    "streamifier": "^0.1.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@playwright/test": "^1.46.0",
    "@types/node": "^22.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.9.0",
    "globals": "^15.9.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.9",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "terser": "^5.31.6",
    "typescript": "^5.5.4",
    "vite": "^5.4.0",
    "vitest": "^2.0.5"
  },
  "keywords": [
    "ecommerce",
    "streetwear",
    "fashion",
    "la-vague"
  ],
  "author": "LA VAGUE",
  "license": "ISC",
  "engines": {
    "node": "20.x"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npx eslint --fix",
      "npx prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "npx prettier --write"
    ]
  }
}
